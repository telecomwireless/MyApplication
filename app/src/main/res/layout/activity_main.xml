        android:layout_alignBottom="@+id/B6"
        android:layout_toEndOf="@+id/B6"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="X"
        android:id="@+id/B8"

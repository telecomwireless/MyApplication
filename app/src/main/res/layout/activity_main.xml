        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/keer"
        android:layout_above="@+id/B2"
        android:layout_toStartOf="@+id/B4"
        android:layout_marginBottom="35dp"
        android:layout_alignEnd="@+id/B4"

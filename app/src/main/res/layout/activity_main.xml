        android:layout_alignTop="@+id/B2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:id="@+id/B4"
        android:layout_alignBottom="@+id/B3"
        android:layout_toEndOf="@+id/B3"
        android:layout_alignTop="@+id/B3"
